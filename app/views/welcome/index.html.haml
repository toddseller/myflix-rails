.container-fluid
  .row.align-items-center.no-gutter
    .col.wrapper
      = image_set_tag 'background_small.jpg', {'background_small.jpg'  => '1000w','background_large.jpg' => '1500w','main_background.jpg' => '1800w'}, sizes: '100vw', alt: 'background', id: 'background'
      .fake-nav
        = link_to image_tag('logo_red.svg'), root_path
        - if user_signed_in?
          = link_to 'Sign out', destroy_user_session_url, method: :delete, class: 'btn btn-danger'
        - else
          = link_to 'Sign in', new_user_session_url, class: 'btn btn-danger'
      .cta
        %h1 Your movies, your way.
        %p CREATE YOUR PERSONAL ONLINE MOVIE DATABASE
        = link_to 'JOIN FOR FREE TODAY', new_user_registration_url, class: 'btn btn-danger'
